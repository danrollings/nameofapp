<!DOCTYPE html>
<html>
  <head>
    <title>Rollings Roastery</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

<body data-spy="scroll" data-target=".navbar">
    <div id="fb-root"></div>
        <!--navbar starts here-->
    <!-- Collect the nav links, forms, and other content for toggling -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
        
          <button type="button" class="navbar-toggle" data-toggle="collapse"
            data-target=".navbar-collapse"> 

          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
        </div>
        <!--end navbar-header-->
        <div class="navbar-collapse collapse">
        <div class="logo navbar-right">  
          <%= image_tag("/assets/Roasting-logo-coffee-ring.png") %>
        </div>
          <ul class="nav navbar-nav navbar-left">
                  
  			<li class="nav-item">
           <a class="nav-link" href="/static_pages/landing_page">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/products">Products</a>
        </li>
  			<li class="nav-item">
          <a class="nav-link" href="/static_pages/about">About</a></li>
  			<li class="nav-item">
          <a class="nav-link" href="/static_pages/contact">Contact</a></li>
          <li class="nav-item">
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path) %>
          <% end %>
        </li>
        <div class="form-group nav-item navbar-nav pull-left" id="search">      
            <%= form_tag("/products", method: "get", class: "navbar-form navbar-left", id: "search-field") do %>
            <%= text_field_tag(:q, "", class: "form-control") %>
            <%= submit_tag "SEARCH", class: "btn btn-default btn-secondary", :id=> "search1" %>
          <% end %>
        </div>
  		</ul>
        
      </div>
    </div>
    </nav>

    <% if notice %>
      <div class="alert alert-success" id="alert" role="alert"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-warning" id="alert" role="alert"><%= alert %></div>
    <% end %>

    <div class ="container main">
      <%= yield %>
    </div>

    <footer class="footer">
      <div class="container">
        <p>&copy 2016 Rollings Roastery</p>
      </div>
    </footer>
  </body>
</html>