<div class="col-xs-12 col-sm-6 col-md-4 col-l-3">
  <div class="product-info">
    <% cache product do %>
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
      <div >Â£<%= product.price %></div>
      <div><%= link_to 'Show', product %></div>
    <% end %><!--/cache-->
      <% if signed_in? && current_user.admin? %>
        <div><%= link_to 'Edit', edit_product_path(product) %></div>
        <div><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %><!--/conditional-->
  </div><!--/product-info-->
</div><!--/col-->
