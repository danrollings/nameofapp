<h1>Contact Us</h1>

<%= flash[:notice] %>
    <%= form_tag("/static_pages/thank_you") do %>

  <div class="row">
      
    <div class="col-xs-12 col-sm-12 col-md-6 col-l-6">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
      </div>  

      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
      </div>
        
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
      </div>      
      <%= submit_tag "Send", class: "btn btn-default btn-secondary" %>   
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-l-6">
      <div class="address">
        <h4 class="contactline"><span class="glyphicon glyphicon-play"></span> 43 Kitsbury Road, Berkhamsted, Hertfordshire, HP4 3EA</h4>
        <h4 class="contactline"><span class="glyphicon glyphicon-earphone"></span> +447790931803</h4>
        <h4 class="contactline"><span class="glyphicon glyphicon-envelope"></span> danielrollings@mac.com</h4>
      </div> 
    </div> 

  </div> 
</div>

<% end %>